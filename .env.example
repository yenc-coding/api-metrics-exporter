# API Metrics Configuration

# Storage driver (redis, memory)
API_METRICS_DRIVER=redis

# Redis configuration
API_METRICS_REDIS_CONNECTION=default
API_METRICS_REDIS_PREFIX=api_metrics:
API_METRICS_REDIS_TTL=86400
API_METRICS_REDIS_CLIENT=predis

# Endpoint configuration
API_METRICS_ENDPOINT_PATH=api_metrics
API_METRICS_ENDPOINT_MIDDLEWARE=api

# Collection configuration
API_METRICS_ENABLED=true
API_METRICS_EXCLUDED_PATHS=metrics,health*
API_METRICS_EXCLUDED_METHODS=OPTIONS

# Logging configuration
API_METRICS_LOGGING=true
API_METRICS_LOG_LEVEL=debug
